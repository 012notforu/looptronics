// Let's demonstrate the action principle
function symbolicAction(theta_field, S_field) {
    let action = 0;
    // Simplified 1D action integral
    for (let i = 1; i < theta_field.length - 1; i++) {
        const grad_theta = theta_field[i+1] - theta_field[i-1];
        const kinetic = 0.5 * grad_theta * grad_theta;
        const potential = S_field[i];
        action += kinetic + potential;
    }
    return action;
}

// Example: two different field configurations
const config1 = [0, 0.1, 0.2, 0.3, 0.4]; // smooth gradient
const config2 = [0, 0.5, 0.1, 0.6, 0.2]; // jagged
const S_uniform = [1, 1, 1, 1, 1];

const action1 = symbolicAction(config1, S_uniform);
const action2 = symbolicAction(config2, S_uniform);

console.log(`\nAction Principle Example:`);
console.log(`Smooth configuration action: ${action1.toFixed(3)}`);
console.log(`Jagged configuration action: ${action2.toFixed(3)}`);
console.log(`Nature prefers: ${action1 < action2 ? 'smooth' : 'jagged'} (lower action)`);

